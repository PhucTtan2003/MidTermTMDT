@model IEnumerable<Shopee.Data.Hanghoa>

@{
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h1>Quản lý sản phẩm</h1>

<a asp-action="Create" class="btn btn-success mb-3">Thêm sản phẩm</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>#</th>
            <th>Tên sản phẩm</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHh</td>
                <td>@item.TenHh</td>
                <td>@string.Format("{0:N0} VND", item.DonGia)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaHh" class="btn btn-warning">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@item.MaHh" class="btn btn-danger">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
