@model IEnumerable<MyEStore.Models.HangHoaVM>

@{
    ViewData["Title"] = "Danh sách hàng hóa";
    // Lấy giỏ hàng từ Session và tính tổng số lượng sản phẩm
    int cartItemCount = Context.Session.Get<List<MyEStore.Models.CartItem>>("MY_CART")?.Sum(x => x.SoLuong) ?? 0;
}
<style>
    .hh-box {
        width: 250px;
        height: 300px;
        border: 1px solid blue;
        display: inline-block;
        text-align: center;
        position: relative;
        margin: 5px;
    }

    .hh-box-img {
        width: 80%;
        height: 80%;
    }

    .hh-box-actions {
        position: absolute;
        right: 5px;
        bottom: 5px;
        display: flex;
        gap: 5px;
    }

    .hh-box-gia {
        position: absolute;
        left: 5px;
        bottom: 5px;
        font-weight: bolder;
        font-size: large;
    }

    .cart-link {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

        .cart-link a {
            font-size: 18px;
            font-weight: bold;
            color: white;
            background-color: #007bff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            position: relative;
        }

            .cart-link a:hover {
                background-color: #0056b3;
            }

    .cart-badge {
        background-color: red;
        color: white;
        border-radius: 50%;
        font-size: 12px;
        width: 20px;
        height: 20px;
        text-align: center;
        line-height: 20px;
        position: absolute;
        top: -5px;
        right: -5px;
    }
</style>

<h1>Danh sách Hàng hóa</h1>

<!-- Nút giỏ hàng -->
<div class="cart-link">
    <a asp-controller="Cart" asp-action="Index">
        <i class="fas fa-shopping-cart"></i> Giỏ hàng
        @if (cartItemCount > 0)
        {
            <!-- Hiển thị số lượng sản phẩm trong giỏ hàng -->
            <span class="cart-badge">@cartItemCount</span>
        }
    </a>
</div>

<div class="container">
    @foreach (var hh in Model)
    {
        <div class="hh-box">
            <!-- Hình ảnh và thông tin sản phẩm -->
            <a asp-action="Detail" asp-route-id="@hh.MaHh">
                <img src="~/Hinh/HangHoa/@hh.Hinh" alt="@hh.TenHh" class="hh-box-img" />
            </a>
            <div class="hh-box-actions">
                <!-- Nút Mua và Thêm vào giỏ hàng -->
                <a class="btn btn-primary" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@hh.MaHh">Mua</a>
                <a class="btn btn-success" asp-controller="Cart" asp-action="AddToCart" asp-route-id="@hh.MaHh">Thêm vào</a>
            </div>
            <div class="hh-box-gia">@hh.DonGia $</div>
        </div>
    }
</div>
