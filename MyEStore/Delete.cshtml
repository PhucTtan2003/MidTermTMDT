@model CartItem

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1 class="text-center my-4">Xóa sản phẩm</h1>

<div class="alert alert-warning text-center">
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?</h4>
</div>

<div class="card">
    <div class="card-header">
        Thông tin sản phẩm
    </div>
    <div class="card-body">
        <p><strong>Tên sản phẩm:</strong> @Model.TenHh</p>
        <p><strong>Đơn giá:</strong> @Model.DonGia.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</p>
        <p><strong>Số lượng:</strong> @Model.SoLuong</p>
        <p><strong>Thành tiền:</strong> @(@Model.DonGia * @Model.SoLuong).ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</p>
    </div>
</div>

<div class="text-end mt-4">
    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@Model.MaHh">
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
