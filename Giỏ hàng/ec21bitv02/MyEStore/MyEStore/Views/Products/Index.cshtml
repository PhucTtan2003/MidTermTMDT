@model IEnumerable<MyEStore.Models.HangHoaVM>

@{
	ViewData["Title"] = "Index";
    // Lấy giỏ hàng từ Session và tính tổng số lượng sản phẩm
    int cartItemCount = Context.Session.Get<List<MyEStore.Models.CartItem>>("MY_CART")?.Count ?? 0;
}
<style>
	.hh-box {
		width: 250px;
		height: 300px;
		border: 1px solid blue;
		display: inline-block;
		text-align: center;
		position: relative;
		margin: 5px;
	}

	.hh-box-img {
		width: 80%;
		height: 80%;
	}

	.hh-box-mua {
		position: absolute;
		right: 5px;
		bottom: 5px;
	}

	.hh-box-gia {
		position: absolute;
		left: 5px;
		bottom: 5px;
		font-weight: bolder;
		font-size: large;

	}

    .hh-box {
        width: 100%;
        border: 1px solid blue;
        text-align: center;
        margin-bottom: 10px;
    }

    .search-box {
        margin-top: 10px;
    }

    .cart-link {
        display: flex;
        justify-content: flex-end;
        margin-bottom: 20px;
    }

        .cart-link a {
            font-size: 18px;
            font-weight: bold;
            color: white;
            background-color: #007bff;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            position: relative;
        }

            .cart-link a:hover {
                background-color: #0056b3;
            }

    .cart-badge {
        background-color: red;
        color: white;
        border-radius: 50%;
        font-size: 12px;
        width: 20px;
        height: 20px;
        text-align: center;
        line-height: 20px;
        position: absolute;
        top: -5px;
        right: -5px;
    }
</style>
<!-- Nút giỏ hàng -->
<div class="cart-link">
    <a asp-controller="Cart" asp-action="Index">
        <i class="fas fa-shopping-cart"></i> Giỏ hàng
        @if (cartItemCount > 0)
        {
            <!-- Hiển thị số lượng sản phẩm trong giỏ hàng -->
            <span class="cart-badge">@cartItemCount</span>
        }
    </a>
</div>
<div class="container">
    <div class="row">
        <!-- Cột chứa danh sách hàng hóa -->
        <div class="col-md-9">
            <div class="row">
                @foreach (var hh in Model)
                {
                    <div class="col-md-4">
                        <div class="hh-box">
                            <h3 class="hh-box-name">@hh.TenHh</h3>
                            <a asp-action="Detail" asp-route-id="@hh.MaHh">
                                <img src="~/Hinh/HangHoa/@hh.Hinh" alt="@hh.TenHh" class="hh-box-img" />
                            </a>
                            <a asp-action="AddToCartAndPurchase" asp-controller="Cart" asp-route-id="@hh.MaHh" class="btn btn-primary hh-box-mua">MUA</a>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Cột chứa thanh tìm kiếm -->
        <div class="col-md-3">
            <form asp-controller="Products" asp-action="Search" method="post">
                <div class="search-box">
                    <input type="text" class="form-control mb-2" placeholder="Search" name="Searchterm" />
                    <button class="btn btn-warning w-100" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>
