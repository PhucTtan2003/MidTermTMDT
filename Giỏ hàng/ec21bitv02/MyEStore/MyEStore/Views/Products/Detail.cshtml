@model MyEStore.Entities.HangHoa

@{
    ViewData["Title"] = "Detail";
}

<h1>@Model.TenHh</h1>

<div>
    <h4>HangHoaVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MaHh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MaHh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TenHh)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TenHh)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Hinh)
        </dt>
        <dd class="col-sm-10">
            <img src="~/Hinh/HangHoa/@Model.Hinh" alt="@Model.TenHh" class="hh-box-img" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DonGia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DonGia)
        </dd>
    </dl>

    <form asp-controller="Cart" method="post">
        <label for="qty">Số lượng:</label>
        <input type="number" id="qty" name="qty" value="1" min="1" style="width:60px;" />

        <button type="submit" formaction="@Url.Action("AddToCartAndPurchase", "Cart", new { id = Model.MaHh })" class="btn btn-primary">
            Mua
        </button>

        <button type="submit" formaction="@Url.Action("AddToCart", "Cart", new { id = Model.MaHh })" class="btn btn-success">
            Thêm vào giỏ hàng
        </button>
    </form>


</div>