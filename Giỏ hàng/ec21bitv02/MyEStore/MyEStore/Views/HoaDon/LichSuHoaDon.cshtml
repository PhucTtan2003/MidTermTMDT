@model IEnumerable<MyEStore.Models.HoaDonVM>

<h2>Lịch sử Hóa Đơn</h2>

<table class="table">
    <thead>
        <tr>
            <th>Mã Hóa Đơn</th>
            <th>Ngày Đặt</th>
            <th>Họ Tên</th>
            <th>Địa Chỉ</th>
            <th>Phí Vận Chuyển</th>
            <th>Cách Thanh Toán</th>
            <th>Trạng Thái</th>
            <th>Ghi Chú</th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaHD</td>
                <td>@item.NgayDat.ToString("dd/MM/yyyy")</td>
                <td>@item.HoTen</td>
                <td>@item.DiaChi</td>
                <td>@item.PhiVanChuyen</td>
                <td>@item.CachThanhToan</td>
                <td>@item.TenTrangThai</td>
                <td>@item.GhiChu</td>
                <td>
                    <a href="@Url.Action("ChiTietHoaDon", "HoaDon", new { id = item.MaHD })" class="btn btn-primary">
                        Xem Chi Tiết
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
